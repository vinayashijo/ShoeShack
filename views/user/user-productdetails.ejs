<%- include ('../partials/userheader') %>

<script>
$(document).ready(function(){
    $('.related-products-slider').slick({
        infinite: true,
        slidesToShow: 4,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 2000,
        dots: true,
        arrows: true,
        responsive: [
            {
                breakpoint: 1024,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 1,
                    infinite: true,
                    dots: true
                }
            },
            {
                breakpoint: 768,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 480,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            }
        ]
    });
});

async function addToWishlist(productId) {
    try {
        const response =  await axios.post('/addtowishlist', { productId });
        alert(response.status)
        if (!response.data.login) {
            return window.location.href = '/userlogin';
        }
        if (response.data.success) {
            Swal.fire({
                title: 'Added to Wishlist',
                text: response.data.message,
                icon: 'success',
                confirmButtonColor: '#28a745'
            }).then((result) => 
            {
                if (result.isConfirmed) {
                    window.location.href = '/viewwishlist'; // Redirect to the viewcart page
                }
            });
        }
        else if (response.status === 409) {

            Swal.fire({
                title: 'Already in Wishlist',
                text: response.data.message,
                icon: 'warning',
                confirmButtonColor: '#ffc107'
            });
        }
    } catch (error) {
        console.error(error);

        if (error.response && error.response.status === 409) {
            Swal.fire({
                title: 'Already in Wishlist',
                text: 'The product is already in your wishlist.',
                icon: 'warning',
                confirmButtonColor: '#ffc107'
            });
        } else {
            Swal.fire({
                title: 'Error Adding Product to Wishlist',
                text: 'There was an error adding the product to your wishlist.',
                icon: 'error',
                confirmButtonColor: '#dc3545'
            });
        }
    }
}

async function addToCart(productId) {
    try {
        const response = await axios.post('/addtocart', { productId });
    
        if (!response.data.login) {
            return window.location.href = '/userlogin';
        }
        if( response.data.newItem === true ){
            Swal.fire({
                title: 'Product Added to Cart',
                text: 'The selected product has been added to your cart.',
                icon: 'success',
                confirmButtonColor: '#28a745',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/viewcart'; // Redirect to the viewcart page
                }
            });
        }
    } catch (error) {
        console.error(error);

        if (error.response && error.response.status === 404) {
            return Swal.fire({
                title: 'Product Out of Stock',
                text: "You've reached the maximum quantity of products available for purchase.",
                icon: 'error',
                confirmButtonColor: '#d33',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/viewcart'; // Redirect to the viewcart page
                }
            });
        } else {
            Swal.fire({
                title: 'Error Adding Product to Cart',
                text: error,
                icon: 'error',
                confirmButtonColor: '#d33',
                confirmButtonText: 'OK'
            });
        }
    }
}
</script>

