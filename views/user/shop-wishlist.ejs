                    confirmButtonText: 'OK'
                }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/viewcart'; // Redirect to the viewcart page
                            }
                        });
            }
            else
            {
        Swal.fire({
            title: 'Error Adding Product to Cart',
            text: error,
            icon: 'error',
            confirmButtonColor: '#d33',
