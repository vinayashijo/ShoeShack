<%- include ('../partials/adminheader') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or delete a category</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>

            <!-- Flash Messages -->
        
        <% if (error) { %>
            <p class="text-danger"><%=error%></p>                
        <% } %>
        <% if (message) { %>
            <p class="text-success"><%= message %></p>                
        <% } %>
     


            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form method="post" action="/addtocategory" onsubmit="return validateForm ()">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" name="categoryName" class="form-control" id="product_name" />
                                    <div id="categoryName-error" class="error-message"></div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea  name="description" id="description" placeholder="Type here" class="form-control"></textarea>
                                    <div id="description-error" class="error-message"></div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Offer</label>
                                    <div class="input-group">
                                        <input type="text" placeholder="Type here" name="offer" class="form-control" id="offer" />
                                        <div class="input-group-append">
                                            <span class="input-group-text" style="background-color: #fff; border: none; border-left: 1px solid #ced4da;">%</span>
                                        </div>
                                    </div>
                                    <div id="offer-error" class="error-message"></div>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Create category</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                            </th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Offer (%)</th>
                                            <th>Edit</th>
                                            <th>status</th>
                                            <th >List/Unlist</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach((row, index) => { %>
                                        <tr>    
                                                    <td><!-- Content for the first column, if needed --></td>
                                                    <td><%= row.name %></td>
                                                    <td><b><%= row.description %></b></td>
                                                    <td><b><%= row.offer %></b></td>
                                                    <td>
                                                        <a href="/editcategory?id=<%= row._id %>">

                                                            <i class="fas fa-pencil-alt"></i> Edit
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <% if (row.islisted==true) { %>
                                                            <span class="badge rounded-pill alert-success">Listed</span>
                                                        <% } else { %>
                                                            <span class="badge rounded-pill alert-danger">Unlisted</span>
                                                        <% } %>
                                                    </td>


                                                    <td >
                                                        <% if (row.islisted === true) { %>
                                                            <button id="unlistedButton<%=row._id %>" class="btn" style="width: 70px; background-color: rgb(255, 0, 0); color: white;"  onclick="unlist('<%= row._id %>', 'Unlist')">
                                                               Unlist
                                                            </button>
                                                        <% } else { %>
                                                            <button id="listedButton<%=row._id %>" class="btn btn-success" style="width: 70px; background-color: rgb(15, 193, 15);" onclick="unlist('<%= row._id %>','list')">
                                                              List
                                                            </button>
                                                        <% } %>
                                                        
                                                        
                                                    </td>
                                                  
                                        </tr>
                                            <% } ) %>

                                    </tbody>
                                </table>
                            </div>
                        </div> 
                    </div> 
                </div> 
            </div> 
        </section> 

    <!-- Pagination Section Begin -->
    <div class="pagination-area mt-15 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?page=<%= prevPage %>" data-page="<%= prevPage %>">
                            <i class="material-icons md-chevron_left"></i>
                        </a>
                    </li>
                <% } %>
                <% if (currentPage > 2) { %>
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?page=1" data-page="1">1</a>
                    </li>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?page=<%= currentPage - 1 %>" data-page="<%= currentPage - 1 %>"><%= currentPage - 1 %></a>
                    </li>
                <% } %>
                <li class="page-item active">
                    <span class="page-link"><%= currentPage %></span>
                </li>
                <% if (hasNextPage) { %>
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?page=<%= currentPage + 1 %>" data-page="<%= currentPage + 1 %>"><%= currentPage + 1 %></a>
                    </li>
                <% } %>
                <% if (nextPage !== lastPage && currentPage !== lastPage) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?page=<%= lastPage %>" data-page="<%= lastPage %>"><%= lastPage %></a>
                    </li>
                <% } %>
                <% if (currentPage !== lastPage) { %>
                    <li class="page-item">
                        <a class="page-link pagination-link" href="?page=<%= nextPage %>" data-page="<%= nextPage %>">
                            <i class="material-icons md-chevron_right"></i>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
    <!-- Pagination Section End -->

